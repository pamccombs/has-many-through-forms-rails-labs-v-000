<%= form_for Post.new do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>


  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

  <%= f.fields_for :categories, Category.new do |categ| %>
    <%= categ.text_field :name %>
  <% end %>

  <%= f.submit %>
<% end %>
